              },
              {
                "id": "false",
                "label": {
                  "en": "Sound Enabled"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "action_command",
        "title": {
          "en": "Run a command..."
        },
        "titleFormatted": {
          "en": "Run command [[command]] with timeout [[timeout]] and working directory [[cwd]] and output ID [[outputId]]"
        },
        "hint": {
          "en": "To do something with the output you can specify an output ID. Then use a when card in a different Flow that responds to your specified output ID."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=desktop"
          },
          {
            "type": "text",
            "name": "command",
            "title": {
              "en": "Command"
            },
            "placeholder": {
              "en": "cd /somefolder && git status"
            }
          },
          {
            "type": "text",
            "name": "cwd",
            "title": {
              "en": "Working Directory"
            },
            "placeholder": {
              "en": "/"
            }
          },
          {
            "type": "number",
            "name": "timeout",
            "title": {
              "en": "Timeout"
            },
            "placeholder": {
              "en": "0"
            },
            "min": 0,
            "max": 100000,
            "step": 1
          },
          {
            "type": "text",
            "name": "outputId",
            "title": {
              "en": "Output ID"
            },
            "placeholder": {
              "en": "e.g. 1, output git status"
            }
          }
        ]
      },
      {
