{
  "triggers": [
    {
      "id": "trigger_button",
      "title": {
        "en": "A button is pressed..."
      },
      "titleFormatted": {
        "en": "Button [[button]] is pressed"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "button",
          "placeholder": {
            "en": "Search for a button..."
          }
        }
      ]
    },
    {
      "id": "trigger_accelerator",
      "title": {
        "en": "A shorcut is pressed..."
      },
      "titleFormatted": {
        "en": "Shortcut [[accelerator]] is pressed"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "accelerator",
          "placeholder": {
            "en": "Search for a shortcut..."
          }
        }
      ]
    },
    {
      "id": "trigger_command",
      "title": {
        "en": "A command is executed..."
      },
      "titleFormatted": {
        "en": "A command with output ID [[outputId]] is executed"
      },
      "args": [
        {
          "type": "text",
          "name": "outputId",
          "placeholder": {
            "en": "Output ID"
          }
        }
      ],
      "tokens": [
        {
          "name": "output",
          "type": "string",
          "title": {
            "en": "Output"
          },
          "example": "Command output"
        }
      ]
    },
    {
      "id": "trigger_input_text",
      "title": {
        "en": "A text input was send..."
      },
      "titleFormatted": {
        "en": "Text input [[input]] was send"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "input",
          "placeholder": {
            "en": "Search for an input..."
          }
        }
      ],
      "tokens": [
        {
          "name": "content",
          "type": "string",
          "title": {
            "en": "Content"
          },
          "example": {
            "en": "Content"
          }
        }
      ]
    },
    {
      "id": "trigger_input_number",
      "title": {
        "en": "A number input was send..."
      },
      "titleFormatted": {
        "en": "Number input [[input]] was send"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "input",
          "placeholder": {
            "en": "Search for an input..."
          }
        }
      ],
      "tokens": [
        {
          "name": "content",
          "type": "number",
          "title": {
            "en": "Content"
          },
          "example": 1
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "action_browser_open",
      "title": {
        "en": "Open url"
      },
      "titleFormatted": {
        "en": "Open url [[url]]"
      },
      "hint": {
        "en": "Open an url in the default desktop's manner."
      },
      "args": [
        {
          "type": "text",
          "name": "url",
          "placeholder": {
            "en": "URL"
          }
        }
      ]
    },
    {
      "id": "action_path_open",
      "title": {
        "en": "Open path"
      },
      "titleFormatted": {
        "en": "Open path [[path]]"
      },
      "hint": {
        "en": "Open a path in the default desktop's manner."
      },
      "args": [
        {
          "type": "text",
          "name": "path",
          "placeholder": {
            "en": "Path"
          }
        }
      ]
    },
    {
      "id": "action_notification_show",
      "title": {
        "en": "Create a desktop notification with..."
      },
      "titleFormatted": {
        "en": "Create a desktop notification with title [[title]] and message [[body]] and [[silent]]"
      },
      "args": [
        {
          "type": "text",
          "name": "title",
          "placeholder": {
            "en": "Title"
          }
        },
        {
          "type": "text",
          "name": "body",
          "placeholder": {
            "en": "Message"
          }
        },
        {
          "type": "dropdown",
          "name": "silent",
          "values": [
            {
              "id": "true",
              "label": {
                "en": "Sound Disabled"
              }
            },
            {
              "id": "false",
              "label": {
                "en": "Sound Enabled"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "action_command",
      "title": {
        "en": "Run a command..."
      },
      "titleFormatted": {
        "en": "Run command [[command]] with timeout [[timeout]] and working directory [[cwd]] and output ID [[outputId]]"
      },
      "hint": {
        "en": "To do something with the output you can specify an output ID. Then use a when card in a different Flow that responds to your specified output ID."
      },
      "args": [
        {
          "type": "text",
          "name": "command",
          "title": {
            "en": "Command"
          },
          "placeholder": {
            "en": "cd /somefolder && git status"
          }
        },
        {
          "type": "text",
          "name": "cwd",
          "title": {
            "en": "Working Directory"
          },
          "placeholder": {
            "en": "/"
          }
        },
        {
          "type": "number",
          "name": "timeout",
          "title": {
            "en": "Timeout"
          },
          "placeholder": {
            "en": "0"
          },
          "min": 0,
          "max": 100000,
          "step": 1
        },
        {
          "type": "text",
          "name": "outputId",
          "title": {
            "en": "Output ID"
          },
          "placeholder": {
            "en": "e.g. 1, output git status"
          }
        }
      ]
    },
    {
      "id": "action_display_set",
      "title": {
        "en": "Set a display value..."
      },
      "titleFormatted": {
        "en": "Set [[display]] to [[text]]"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "display",
          "placeholder": {
            "en": "Search for a display..."
          }
        },
        {
          "type": "text",
          "name": "text",
          "title": {
            "en": "Text"
          },
          "placeholder": {
            "en": "Display value"
          }
        }
      ]
    },
    {
      "id": "action_window_open",
      "title": {
        "en": "Open an app window..."
      },
      "titleFormatted": {
        "en": "Open app window [[window]]"
      },
      "args": [
        {
          "type": "autocomplete",
          "name": "window",
          "placeholder": {
            "en": "Search for a window..."
          }
        }
      ]
    }
  ]
}
